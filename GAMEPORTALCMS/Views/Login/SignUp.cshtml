    <script>

$(".toggle-password").click(function() {

  $(this).toggleClass("fa-eye fa-eye-slash");
  var input = $($(this).attr("toggle"));
  if (input.attr("type") == "password") {
    input.attr("type", "text");
  } else {
    input.attr("type", "password");
  }
});

        function KeyPress(){

            var username = $('#Email').val();
            var sss=  helper.isValidEmail(username);
            if(!sss){
                $.notify("Invalid Email", 'error');
            }        
        }

        function Passmapping(){

                  var pass = $('#password-field').val();                  
                  if(pass.length < 6){
                       $.notify("Password must be at least 6 characters long.", 'error');
                  }
                  else if (!/[!@@#$%^&*(),.?":{}|<>]/.test(pass)) {

                    errorMessage = 'Password must contain at least one special character.';

                    $.notify(errorMessage, 'error');
                }
        }
    
        function Checkpass(){

            var passOne = $('#password-field').val();        
            var passCon = $('#Conpassword').val();

            if(passOne.trim() != passCon.trim()){                 
                $('#Conpassword').val('');
                $.notify("Password Not Match", 'error');
            }
        }


        function Formvalidation(){
           
            let isValid = true;

            var userName = $('#username').val();

            if(userName == null || userName == "" || userName == "Undefine"){

                $.notify("User Name Requird", 'error');

                isValid = false
            }

            if($('#Email').val() == null || $('#Email').val() == "" || $('#Email').val() == "Undefine"){

                $.notify("Email Requird", 'error');

                isValid = false
            }

            if($('#password-field').val() == null || $('#password-field').val() == "" || $('#password-field').val() == "Undefine"){

                 $.notify("Password Requird", 'error');

                isValid = false
            }

            if($('#Conpassword').val() == null || $('#Conpassword').val() == "" || $('#Conpassword').val() == "Undefine"){

                $.notify("Confirm Password Requird", 'error');

                isValid = false
            }   
            
            return isValid
        }


        function validate() {


            if(Formvalidation()){

                $.notify("Hurry", 'success');
            }
             
            $.ajax({
                 url: '/login/ValidateUser',
                //url: 'api/EBLLogin/UserLogin',
                
                type: 'POST',
                
                data: {
                    userName: username,
                    password: password
                },
                
                success: function (response) {
                  
                    // console.log(response);
                    if (response.success) {
                        window.location.href = '/dashboard';
                    } else {
                        alert('Invalid username or password. Please try again.');
                       // $.notify(response.Message, 'error');
                    }
                },
                // error: function (xhr, status, error) {
                //     console.error('Error occurred:', status, error);
                // }
            });
        }


    </script>


    <script>

           $.ajax({
            type: method,
            async: async,
            url: url,
            data: data,
            success: (response, textStatus, jqXHR) => {
                if (showLoader === true) {
                    unBlockUI();
                }
                if (modalHandling === true && isSuccess(response)) {
                    hideModal();
                }

                if (showMessage === true) {
                    if (alertBox === true) {
                        showAlert(response.message, isSuccess(response) === true ? 'success' : 'error', callback);
                    }
                    else {
                        $.notify(response.message, isSuccess(response) === true ? 'success' : 'error');
                    }
                }
                if (alertBox === false) {
                    callback(response);
                }
            },
            error: (jqXHR, textStatus, errorThrown) => {

                if (showLoader) {
                    unBlockUI();
                }
                _handleError(jqXHR, textStatus, errorThrown);
            }
        });

    </script>    



